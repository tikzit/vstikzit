{
  "name": "vstikzit",
  "publisher": "AleksKissinger",
  "icon": "./images/tikzit.png",
  "type": "module",
  "displayName": "TikZiT for VS Code",
  "description": "TikZiT-like GUI for editing tikz files in VS Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/tikzit/vstikzit.git"
  },
  "version": "0.4.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:tex",
    "onLanguage:latex",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "TikZiT",
      "properties": {
        "vstikzit.enableAnimations": {
          "type": "boolean",
          "default": true,
          "description": "Enable animations in the TikZ editor."
        }
      }
    },
    "commands": [
      { "command": "vstikzit.openTikzEditor", "title": "Open TikZ Editor", "category": "TikZiT",
        "when": "(resourceExtname == .tikz || resourceExtname == .tex || resourceExtname == .html) && activeCustomEditorId != vstikzit.tikzEditor" },
      { "command": "vstikzit.syncTikzFigures", "title": "Sync > TikZ Figures", "category": "TikZiT" },
      { "command": "vstikzit.syncTikzFiguresSVG", "title": "Sync > TikZ Figures with SVGs", "category": "TikZiT" },
      { "command": "vstikzit.stopSyncingTikzFigures", "title": "Sync > Stop Syncing", "category": "TikZiT" },
      { "command": "vstikzit.buildCurrentTikzFigure", "title": "Build > Build TikZ figure", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.buildCurrentTikzFigureSVG", "title": "Build > Build TikZ figure as SVG", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.viewCurrentTikzFigure", "title": "Build > Preview TikZ figure", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.cut", "title": "Edit > Cut", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.copy", "title": "Edit > Copy", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.paste", "title": "Edit > Paste", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.delete", "title": "Edit > Delete", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.moveLeft", "title": "Edit > Move Nodes Left", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.moveRight", "title": "Edit > Move Nodes Right", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.moveUp", "title": "Edit > Move Nodes Up", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.moveDown", "title": "Edit > Move Nodes Down", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.nudgeLeft", "title": "Edit > Nudge Nodes Left", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.nudgeRight", "title": "Edit > Nudge Nodes Right", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.nudgeUp", "title": "Edit > Nudge Nodes Up", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.nudgeDown", "title": "Edit > Nudge Nodes Down", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.joinPaths", "title": "Edit > Join Paths", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.splitPaths", "title": "Edit > Split Paths", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.mergeNodes", "title": "Edit > Merge Nodes", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.reflectNodesHorizontally", "title": "Edit > Reflect Nodes Horizontally", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.reflectNodesVertically", "title": "Edit > Reflect Nodes Vertically", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.reverseEdges", "title": "Edit > Reverse Edges", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.selectAll", "title": "Selection > Select All", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.deselectAll", "title": "Selection > Deselect All", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.extendSelectionLeft", "title": "Selection > Extend Selection Left", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.extendSelectionRight", "title": "Selection > Extend Selection Right", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.extendSelectionUp", "title": "Selection > Extend Selection Up", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.extendSelectionDown", "title": "Selection > Extend Selection Down", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.selectTool", "title": "Tools > Select Tool", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.nodeTool", "title": "Tools > Node Tool", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.edgeTool", "title": "Tools > Edge Tool", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.viewTikzSource", "title": "View > TikZ Source", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.toggleStylePanel", "title": "View > Toggle Style Panel", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.zoomIn", "title": "View > Zoom In", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.zoomOut", "title": "View > Zoom Out", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.centerViewport", "title": "View > Center Viewport", "category": "TikZiT", "when": "activeCustomEditorId == vstikzit.tikzEditor" }
    ],
    "keybindings": [
      { "command": "vstikzit.openTikzEditor", "key": "ctrl+alt+t", "mac": "cmd+alt+t",
         "when": "(resourceExtname == .tikz || resourceExtname == .tex || resourceExtname == .html) && activeCustomEditorId != vstikzit.tikzEditor" },
      { "command": "vstikzit.buildCurrentTikzFigure", "key": "ctrl+alt+b", "mac": "cmd+alt+b", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.viewCurrentTikzFigure", "key": "ctrl+alt+v", "mac": "cmd+alt+v", "when": "activeCustomEditorId == vstikzit.tikzEditor" },
      { "command": "vstikzit.gui.cut", "key": "ctrl+x", "mac": "cmd+x", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.copy", "key": "ctrl+c", "mac": "cmd+c", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.paste", "key": "ctrl+v", "mac": "cmd+v", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.delete", "key": "delete", "mac": "delete", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.moveLeft", "key": "ctrl+left", "mac": "cmd+left", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.moveRight", "key": "ctrl+right", "mac": "cmd+right", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.moveUp", "key": "ctrl+up", "mac": "cmd+up", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.moveDown", "key": "ctrl+down", "mac": "cmd+down", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.nudgeLeft", "key": "ctrl+shift+left", "mac": "cmd+shift+left", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.nudgeRight", "key": "ctrl+shift+right", "mac": "cmd+shift+right", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.nudgeUp", "key": "ctrl+shift+up", "mac": "cmd+shift+up", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.nudgeDown", "key": "ctrl+shift+down", "mac": "cmd+shift+down", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.joinPaths", "key": "ctrl+alt+p", "mac": "cmd+option+p", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.splitPaths", "key": "ctrl+alt+shift+p", "mac": "cmd+option+shift+p", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.mergeNodes", "key": "ctrl+e", "mac": "cmd+e", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.reflectNodesHorizontally", "key": "alt+right", "mac": "option+right", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.reflectNodesVertically", "key": "alt+down", "mac": "option+down", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.reverseEdges", "key": "ctrl+/", "mac": "cmd+/", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.selectAll", "key": "ctrl+a", "mac": "cmd+a", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.deselectAll", "key": "ctrl+d", "mac": "cmd+d", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.extendSelectionLeft", "key": "shift+left", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.extendSelectionRight", "key": "shift+right", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.extendSelectionUp", "key": "shift+up", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.extendSelectionDown", "key": "shift+down", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.selectTool", "key": "s", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.selectTool", "key": "escape", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.nodeTool", "key": "n", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.edgeTool", "key": "e", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.viewTikzSource", "key": "ctrl+alt+t", "mac": "cmd+option+t", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.toggleStylePanel", "key": "ctrl+alt+s", "mac": "cmd+option+s", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.zoomIn", "key": "=", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.zoomOut", "key": "-", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" },
      { "command": "vstikzit.gui.centerViewport", "key": "0", "when": "activeCustomEditorId == vstikzit.tikzEditor && !inputFocus" }
    ],
    "languages": [
      {
        "id": "tikz",
        "aliases": [
          "TikZ",
          "tikz"
        ],
        "extensions": [
          ".tikz"
        ],
        "configuration": "./tikz-language-configuration.json"
      },
      {
        "id": "tikzstyles",
        "aliases": [
          "TikZ Styles",
          "tikzstyles"
        ],
        "extensions": [
          ".tikzstyles"
        ],
        "configuration": "./tikz-language-configuration.json"
      },
      {
        "id": "tikzdefs",
        "aliases": [
          "TikZ Definitions",
          "tikzdefs"
        ],
        "extensions": [
          ".tikzdefs"
        ],
        "configuration": "./tikz-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tikz",
        "scopeName": "text.tex.tikz",
        "path": "./tikz.tmGrammar.json"
      },
      {
        "language": "tikzstyles",
        "scopeName": "text.tex.tikz",
        "path": "./tikz.tmGrammar.json"
      },
      {
        "language": "tikzdefs",
        "scopeName": "text.tex.tikz",
        "path": "./tikz.tmGrammar.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "vstikzit.tikzEditor",
        "displayName": "TikZ Editor",
        "selector": [
          {
            "filenamePattern": "*.tikz"
          }
        ],
        "priority": "default"
      },
      {
        "viewType": "vstikzit.tikzStylesEditor",
        "displayName": "TikZ Style Editor",
        "selector": [
          {
            "filenamePattern": "*.tikzstyles"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "watch": "concurrently \"vite build --mode webview --watch\" \"vite build --mode extension --watch\"",
    "watch-webview": "vite build --mode webview --watch",
    "watch-extension": "vite build --mode extension --watch",
    "watch-test": "vite build --mode test --watch",
    "watch-browser": "vite build --mode test --watch",
    "build": "vite build --mode webview && vite build --mode extension",
    "build-webview": "vite build --mode webview",
    "build-extension": "vite build --mode extension",
    "build-test": "vite build --mode test",
    "build-browser": "vite build --mode browser",
    "lint": "tsc && eslint .",
    "preview-browser": "concurrently \"vite build --mode browser --watch\" \"vite preview\"",
    "test": "mocha dist/tests.js",
    "pretest": "npm run build-test",
    "package": "rm -r -f dist && vite build --mode webview && vite build --mode extension && vsce package",
    "analyze": "vite-bundle-analyzer",
    "publish": "vsce publish"
  },
  "dependencies": {
    "@preact/preset-vite": "^2.10.2",
    "chevrotain": "^11.0.3",
    "monaco-editor": "^0.54.0",
    "preact": "^10.27.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/vsce": "^3.6.2",
    "chai": "^6.2.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "mocha": "^11.7.4",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-bundle-analyzer": "^1.2.3"
  }
}
